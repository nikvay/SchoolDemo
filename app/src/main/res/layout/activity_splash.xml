        <ImageView
            android:id="@+id/iv_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textColor="@color/txt_color_white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_splash_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" TO FAST CONNECT"
            android:textColor="@color/txt_color_white"
            android:textSize="@dimen/txt_size_17" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_c_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#002366"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5"
            android:text="Powered By: Nikvay Technology"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/txt_size_17" />

    </LinearLayout>

